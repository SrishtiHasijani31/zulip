
<div class="preferred_language_modal_table">
    {{#each language_list}}
        <div class="language_block">
            <a class="language" data-code="{{this.code}}" data-name="{{this.name}}">
                {{#if this.selected}}
                <b>{{this.name_with_percent}}</b>
                {{else}}
                {{this.name_with_percent}}
                {{/if}}
            </a>
        </div>
    {{/each}}
</div>
